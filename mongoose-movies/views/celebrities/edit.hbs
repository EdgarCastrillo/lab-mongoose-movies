<h2>Edit Celebrity</h2>

<form action="/celebrities/{{id}}/edit" method="POST">
  <label for="name">Name</label>
  <input type="text" name="name" value="{{name}}" required>
  <label for="occupation">Occupation</label>
  <input type="text" name="occupation" value="{{occupation}}" required>
  <label for="catchPhrase">Phrase</label>
  <input type="text" name="catchPhrase" value="{{catchPhrase}}" required>
  <button type="submit">Save</button>
</form>

